{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler", 
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["chrome"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "sourceMap": true
  },
  "include": ["src/**/*"]
}

